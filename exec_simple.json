{
    "task": "1",
    "img_size" : 128,
    "img_channels" : 3,
    "cpu_threads": 16,
    "is_training": false,

    "datasets": {
       "train":{
            "dir":"./Dataprep/results/train1.tfrecord"
       },
       "val":{
            "dir":"./Dataprep/results/val1.tfrecord"
       },
       "test":{
           "dir":"./Dataprep/results/test1.txt"
       }
    },

    "networks": {
        "which_model": "SIMPLE",
        "num_features": 128,
        "weight_decay": 1e-2,
        "initializer": "he_normal" 
    },

    "solver": {
        "batch_size": 64,
        "optimizer_type": "adam",
        "lr_init": 1e-5,
        "lr_decay": 0.5,
        "decay_steps": 2000,
        "eval_steps": 200,
        "save_steps": 1000,
        "max_steps": 10000,
        "ckpt_dir": "./Models/",
        "ckpt_id": 1,
        "resume": false
    }
}