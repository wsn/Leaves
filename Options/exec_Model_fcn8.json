{
    "task": "2",
    "img_size" : 256,
    "img_channels" : 3,
    "cpu_threads": 16,
    "is_training": "test",
    "gpu_id": "3",

    "datasets": {
       "train":{
            "dir":"./Dataprep/results/train2.tfrecord"
       },
       "val":{
            "dir":"./Dataprep/results/val2.tfrecord"
       },
       "test":{
           "dir":"./Dataprep/results/test2.txt"
       },
       "play":{
            "in":"./Plays/task2.txt",
            "out":"./Plays/predictions/"
        }
